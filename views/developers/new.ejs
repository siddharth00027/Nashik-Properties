<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <form method="POST" action="/developers" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" name="developer[name]" class="form-control" placeholder="Enter Name Here" required>
                <div class="invalid-feedback">Please enter a Developer's Name.</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="developer[description]" class="form-control" placeholder="Enter Description Here" required></textarea>
                <div class="invalid-feedback">Please enter Description.</div>
            </div>
            <div class="mb-3">
                <label for="developer[logo]" class="form-label">Upload Logo</label>
                <input type="file" name="developer[logo]" class="form-control"  required>
                <div class="invalid-feedback">Please upload logo of developer.</div>
            </div>
            <div class="mb-3">
                <label for="contact" class="form-label">Contact</label>
                <input type="number" name="developer[contact]" class="form-control" placeholder="+91 9000000000" required>
                <div class="invalid-feedback">Please enter Contact Number.</div>
            </div>
            <div class="mb-3">
                <label for="mail" class="form-label">Mail</label>
                <input type="text" name="developer[mail]" class="form-control" placeholder="sample@gmail.com" required>
                <div class="invalid-feedback">Please enter Mail of Developer.</div>
            </div>
            <div class="mb-3">
                <label for="officeAddress" class="form-label">Address</label>
                <input type="text" name="developer[officeAddress]" class="form-control" required>
                <div class="invalid-feedback">Please enter developer's Address.</div>
            </div>
            <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" name="developer[city]" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="establishedIn" class="form-label">Since :</label>
                <input type="number" name="developer[establishedIn]" class="form-control" >
            </div>
            <br>
            <button class="btn mt-3">Submit</button>
            <br>

        </form>
    </div>
</div>